# Backend Environment Variables

# Server Configuration
NODE_ENV=development
PORT=3001
HOST=0.0.0.0

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/resultinstitute_db
DB_HOST=localhost
DB_PORT=5432
DB_NAME=resultinstitute_db
DB_USER=resultinstitute_user
DB_PASSWORD=your_secure_password_here

# Database Pool Configuration
DB_POOL_MAX=20
DB_POOL_MIN=5
DB_POOL_IDLE=10000
DB_POOL_ACQUIRE=30000

# JWT Configuration
JWT_SECRET=your-256-bit-secret-key-change-this-in-production
JWT_EXPIRE=24h
JWT_REFRESH_SECRET=your-refresh-token-secret-key-change-this
JWT_REFRESH_EXPIRE=7d

# Frontend URL
FRONTEND_URL=https://resultinstitude.fayshaa.com
# For local development
# FRONTEND_URL=http://localhost:5173

# Email Configuration (SendGrid)
EMAIL_HOST=smtp.sendgrid.net
EMAIL_PORT=587
EMAIL_USER=apikey
EMAIL_PASSWORD=your-sendgrid-api-key
EMAIL_FROM=noreply@resultinstitute.cm
EMAIL_FROM_NAME=Result Institute

# YouTube API (optional for MVP1)
YOUTUBE_API_KEY=your-youtube-api-key

# Logging
LOG_LEVEL=info
LOG_FILE=logs/app.log

# Security
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_DIR=uploads
